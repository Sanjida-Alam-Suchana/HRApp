@model IEnumerable<HRApp.Models.Salary>

@{
    ViewData["Title"] = "Salary";
    var modelList = Model?.ToList() ?? new List<HRApp.Models.Salary>();
}

<div class="container">
    <h2>Salary List</h2>
    <form asp-action="Generate" method="post">
        <select name="year" class="form-control d-inline w-auto" style="width:100px;">
            <option value="2024">2024</option>
            <option value="2025">2025</option>
        </select>
        <select name="month" class="form-control d-inline w-auto" style="width:80px;">
            @for (int m = 1; m <= 12; m++)
            {
                <option value="@m">@m</option>
            }
        </select>
        <button type="submit" class="btn btn-primary">Generate Salary</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Emp Name</th>
                <th>Join Date</th>
                <th>Gross</th>
                <th>Basic</th>
                <th>HRent</th>
                <th>Medical</th>
                <th>Absent Amount</th>
                <th>Payable</th>
                <th>Is Paid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in modelList)
            {
                <tr>
                    <td>@(item.Employee?.EmpName ?? "N/A")</td>
                    <td>@(item.Employee != null ? item.Employee.dtJoin.ToShortDateString() : string.Empty)</td>
                    <td>@item.Gross</td>
                    <td>@item.Basic</td>
                    <td>@item.HRent</td>
                    <td>@item.Medical</td>
                    <td>@item.AbsentAmount</td>
                    <td>@item.PayableAmount</td>
                    <td>@(item.IsPaid ? "Yes" : "No")</td>
                    <td>
                        @if (!item.IsPaid)
                        {
                            <form asp-action="MarkAsPaid" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Mark Paid</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
