@* @model IEnumerable<EmployeeReportVM>
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Employee List Report</h2>

<form asp-action="EmployeeList" method="get">
    <div class="form-group">
        <label for="deptId">Filter by Department:</label>
        <select name="deptId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "DeptId", "DeptName", ViewBag.SelectedDeptId))">
            <option value="">All Departments</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="DownloadEmployeeListPdf" asp-route-deptId="@ViewBag.SelectedDeptId" class="btn btn-success ml-2">Download PDF</a>
    <a asp-action="DownloadEmployeeListExcel" asp-route-deptId="@ViewBag.SelectedDeptId" class="btn btn-info ml-2">Download Excel</a>
</form>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Join Date</th>
            <th>Service Days</th>
            <th>Department Name</th>
            <th>Designation Name</th>
            <th>Shift Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeName</td>
                    <td>@item.JoinDate.ToShortDateString()</td>
                    <td>@item.ServiceDays</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.DesignationName</td>
                    <td>@item.ShiftName</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">No data found.</td></tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $('form').submit(function (e) {
            e.preventDefault();
            $.get($(this).attr('action'), $(this).serialize(), function (data) {
                $('table').replaceWith($(data).find('table'));
            });
        });
    </script>
} *@