@model IEnumerable<HRApp.Models.Designation>
@{
    ViewData["Title"] = "Designations";
    var companies = ViewBag.Companies as List<HRApp.Models.Company>;
}

<div class="container mt-4">
    <h2>Designations</h2>

    <!-- Button to Open Create Modal -->
    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#designationModal" onclick="openCreateModal()">+ Add Designation</button>

    <!-- Company Filter -->
    <div class="mb-3">
        <select id="companyDropdown" class="form-select w-50">
            <option value="">All Companies</option>
            @foreach (var c in companies)
            {
                <option value="@c.ComId">@c.ComName</option>
            }
        </select>
    </div>

    <!-- Designation Table -->
    <table class="table table-bordered table-striped" id="designationTable">
        <thead>
            <tr>
                <th>Designation Name</th>
                <th>Company</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="designationTableBody">
            @foreach (var d in Model)
            {
                var companyName = companies.FirstOrDefault(c => c.ComId == d.ComId)?.ComName ?? "N/A";
                <tr id="row-@d.DesigId" data-comid="@d.ComId">
                    <td>@d.DesigName</td>
                    <td>@companyName</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="openEditModal('@d.DesigId')">Edit</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteDesignation('@d.DesigId')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Designation Modal -->
<div class="modal fade" id="designationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="designationForm">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add Designation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="DesigId" name="DesigId" />
                    <div class="mb-3">
                        <label for="ComId">Company</label>
                        <select id="ComId" name="ComId" class="form-control" required>
                            <option value="">Select Company</option>
                            @foreach (var com in companies)
                            {
                                <option value="@com.ComId">@com.ComName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="DesigName">Designation Name</label>
                        <input type="text" id="DesigName" name="DesigName" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Function to escape HTML to prevent XSS
        function escapeHtml(str) {
            if (typeof str !== 'string') return '';
            return str
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        // Open Create Modal
        function openCreateModal() {
            $("#designationForm")[0].reset();
            $("#DesigId").val('');
            $("#modalTitle").text("Add Designation");
            $("#ComId").val('');
            $("#designationModal").modal("show");
        }

        // Open Edit Modal
        function openEditModal(id) {
            console.log("Fetching designation with ID:", id);
            $.getJSON('/Designations/GetDesignation/' + id, function (res) {
                console.log("Designation data:", res);
                if (!res.success || !res.designation) {
                    alert("Failed to load designation data: " + (res.message || "Invalid response"));
                    return;
                }
                var desig = res.designation;
                $("#modalTitle").text("Edit Designation");
                $("#DesigId").val(desig.desigId);
                $("#DesigName").val(desig.desigName);
                $("#ComId").val(desig.comId);
                $("#designationModal").modal("show");
            }).fail(function (xhr, status, error) {
                console.error("Edit fetch error:", {
                    status: xhr.status,
                    statusText: xhr.statusText,
                    responseText: xhr.responseText,
                    error: error
                });
                alert("Failed to load designation data: " + (xhr.responseJSON?.message || "Unknown error"));
            });
        }

        // Save (Create/Update)
        $("#designationForm").submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            console.log("Form data being sent:", [...formData.entries()]);
            var id = $("#DesigId").val();
            var url = id ? '/Designations/DesignationEdit/' + id : '/Designations/DesignationCreate';
            console.log("Submitting to URL:", url);
            $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                success: function (res) {
                    console.log("Save response:", res);
                    alert(res.message || "No message returned from server");
                    if (res.success && res.designation) {
                        let d = res.designation;
                        let desigId = d.desigId;
                        let desigName = escapeHtml(d.desigName);
                        let comId = d.comId;
                        let comName = escapeHtml(d.comName || 'N/A');
                        let row = `
                            <tr id="row-${desigId}" data-comid="${comId}">
                                <td>${desigName}</td>
                                <td>${comName}</td>
                                <td>
                                    <button class="btn btn-warning btn-sm" onclick="openEditModal('${desigId}')">Edit</button>
                                    <button class="btn btn-danger btn-sm" onclick="deleteDesignation('${desigId}')">Delete</button>
                                </td>
                            </tr>`;
                        if (id) {
                            $("#row-" + id).replaceWith(row);
                        } else {
                            $("#designationTableBody").append(row);
                        }
                        $("#designationModal").modal("hide");
                        $("#designationForm")[0].reset();
                    } else {
                        console.error("Invalid response structure:", res);
                        alert("Failed to update table. Check console for details.");
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Save error:", {
                        status: xhr.status,
                        statusText: xhr.statusText,
                        responseText: xhr.responseText,
                        error: error
                    });
                    alert("Failed to save designation: " + (xhr.responseJSON?.message || "Unknown error"));
                }
            });
        });

        // Delete Designation
        function deleteDesignation(id) {
            if (!confirm("Are you sure you want to delete this designation?")) return;
            console.log("Deleting designation with ID:", id);
            $.post('/Designations/Delete/' + id,
                { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                function (res) {
                    console.log("Delete response:", res);
                    alert(res.message || "No message returned from server");
                    if (res.success) {
                        $("#row-" + id).remove();
                    }
                }).fail(function (xhr, status, error) {
                    console.error("Delete error:", {
                        status: xhr.status,
                        statusText: xhr.statusText,
                        responseText: xhr.responseText,
                        error: error
                    });
                    alert("Failed to delete designation: " + (xhr.responseJSON?.message || "Unknown error"));
                });
        }

        // Company Filter
        $("#companyDropdown").change(function () {
            let comId = $(this).val();
            console.log("Selected comId:", comId);
            let url = comId ? '/Designations/GetDesignationsByCompany?comId=' + comId : '/Designations/GetAllDesignations';
            console.log("Fetching designations from:", url);
            $("#designationTableBody").html('<tr><td colspan="3">Loading...</td></tr>');
            $.getJSON(url, function (data) {
                console.log("Filter response:", data);
                $("#designationTableBody").empty();
                if (data.length === 0 || (data.success === false)) {
                    $("#designationTableBody").html('<tr><td colspan="3">No designations found.</td></tr>');
                    return;
                }
                $.each(data, function (i, d) {
                    let desigId = d.desigId;
                    let desigName = escapeHtml(d.desigName);
                    let comId = d.comId;
                    let comName = escapeHtml(d.comName || 'N/A');
                    let row = `
                        <tr id="row-${desigId}" data-comid="${comId}">
                            <td>${desigName}</td>
                            <td>${comName}</td>
                            <td>
                                <button class="btn btn-warning btn-sm" onclick="openEditModal('${desigId}')">Edit</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteDesignation('${desigId}')">Delete</button>
                            </td>
                        </tr>`;
                    $("#designationTableBody").append(row);
                });
            }).fail(function (xhr, status, error) {
                console.error("Filter error:", {
                    status: xhr.status,
                    statusText: xhr.statusText,
                    responseText: xhr.responseText,
                    error: error,
                    url: url
                });
                alert("Failed to filter designations: " + (xhr.responseJSON?.message || "Unknown error"));
            });
        });
    </script>
}
