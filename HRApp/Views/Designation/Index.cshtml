@model IEnumerable<HRApp.Models.Designation>

@{
    ViewData["Title"] = "Designations";
}

<div class="container">
    <h2>Designations</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">+ Add Designation</a>
    <table class="table" id="designationsTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>DesigName</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadDesignations();

            function loadDesignations() {
                $.ajax({
                    url: '@Url.Action("GetDesignations", "Designation")',
                    type: "POST",
                    success: function (data) {
                        var tbody = $("#designationsTable tbody");
                        tbody.empty();
                        $.each(data, function (index, designation) {
                            tbody.append(`
                                <tr>
                                    <td>${designation.id}</td>
                                    <td>${designation.name}</td>
                                    <td><a href="@Url.Action("Edit", "Designation")/${designation.id}" class="btn btn-sm btn-warning">Edit</a> <button class="btn btn-sm btn-danger delete-btn" data-id="${designation.id}">Delete</button></td>
                                </tr>
                            `);
                        });
                    }
                });
            }

            $(document).on("click", ".delete-btn", function () {
                if (confirm("Are you sure?")) {
                    var id = $(this).data("id");
                    $.ajax({
                        url: '@Url.Action("Delete", "Designation")',
                        type: "POST",
                        data: { id: id },
                        success: function () {
                            loadDesignations();
                        }
                    });
                }
            });
        });
    </script>
}