@model HRApp.Models.Attendance

@{
    ViewData["Title"] = "Add Attendance";
}

<form id="attendanceForm" novalidate>
    <div class="mb-3">
        <label class="form-label">Employee</label>
        <select asp-for="EmpId" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "Id", "EmpName"))" required>
            <option value="">Select Employee</option>
        </select>
        <span asp-validation-for="EmpId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Date</label>
        <input asp-for="dtDate" class="form-control" type="date" required />
        <span asp-validation-for="dtDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Status</label>
        <input asp-for="AttStatus" class="form-control" required />
        <span asp-validation-for="AttStatus" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">In Time</label>
        <input asp-for="InTime" class="form-control" type="time" required />
        <span asp-validation-for="InTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Out Time</label>
        <input asp-for="OutTime" class="form-control" type="time" required />
        <span asp-validation-for="OutTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#attendanceForm").on("submit", function (e) {
                e.preventDefault();
                if ($(this).valid()) {
                    $.ajax({
                        url: '@Url.Action("Create", "Attendance")',
                        type: "POST",
                        data: $(this).serialize(),
                        success: function (response) {
                            if (response.success) {
                                window.location.href = '@Url.Action("Index", "Attendance")';
                            } else {
                                alert("Error occurred");
                            }
                        }
                    });
                }
            });
        });
    </script>
}