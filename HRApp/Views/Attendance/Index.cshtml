@model IEnumerable<HRApp.Models.Attendance>

@{
    ViewData["Title"] = "Attendance";
}

<div class="container">
    <h2>Attendance</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">+ Add Attendance</a>
    <table class="table" id="attendancesTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Employee</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Fetch employees from server (assuming a GET endpoint)
            $.ajax({
                url: '@Url.Action("GetEmployees", "Attendance")',
                type: "GET",
                success: function (employees) {
                    loadAttendances(employees);
                }
            });

            function loadAttendances(employees) {
                $.ajax({
                    url: '@Url.Action("GetAttendances", "Attendance")',
                    type: "POST",
                    success: function (data) {
                        var tbody = $("#attendancesTable tbody");
                        tbody.empty();
                        $.each(data, function (index, attendance) {
                            // Find employee name client-side using array find
                            var employee = employees.find(e => e.id === attendance.empId);
                            var employeeName = employee ? employee.empName : "N/A";
                            tbody.append(`
                                <tr>
                                    <td>${attendance.id}</td>
                                    <td>${attendance.date}</td>
                                    <td>${employeeName}</td>
                                    <td>${attendance.attStatus || "N/A"}</td>
                                    <td><a href="@Url.Action("Edit", "Attendance")/${attendance.id}" class="btn btn-sm btn-warning">Edit</a> <button class="btn btn-sm btn-danger delete-btn" data-id="${attendance.id}">Delete</button></td>
                                </tr>
                            `);
                        });
                    }
                });
            }

            $(document).on("click", ".delete-btn", function () {
                if (confirm("Are you sure?")) {
                    var id = $(this).data("id");
                    $.ajax({
                        url: '@Url.Action("Delete", "Attendance")',
                        type: "POST",
                        data: { id: id },
                        success: function () {
                            loadAttendances(employees);
                        }
                    });
                }
            });
        });
    </script>
}