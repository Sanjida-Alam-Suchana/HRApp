@model IEnumerable<HRApp.Models.AttendanceSummary>

@{
    ViewData["Title"] = "Attendance Summary";
}

<div class="container">
    <h2>Attendance Summary</h2>
    <form asp-action="Generate" method="post">
        <select name="year" class="form-control d-inline w-auto" style="width:100px;">
            <option value="2024">2024</option>
            <option value="2025">2025</option>
        </select>
        <select name="month" class="form-control d-inline w-auto" style="width:80px;">
            @for (int m = 1; m <= 12; m++)
            {
                <option value="@m">@m</option>
            }
        </select>
        <button type="submit" class="btn btn-primary">Generate Summary</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Emp Name</th>
                <th>Join Date</th>
                <th>Year</th>
                <th>Month</th>
                <th>Present</th>
                <th>Late</th>
                <th>Absent</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model ?? Enumerable.Empty<HRApp.Models.AttendanceSummary>())
            {
                <tr>
                    <td>@(item.Employee?.EmpName ?? "N/A")</td>
                    <td>@(item.Employee?.dtJoin.ToShortDateString() ?? string.Empty)</td>
                    <td>@item.dtYear</td>
                    <td>@item.dtMonth</td>
                    <td>@item.Present</td>
                    <td>@item.Late</td>
                    <td>@item.Absent</td>
                </tr>
            }
        </tbody>
    </table>
</div>
